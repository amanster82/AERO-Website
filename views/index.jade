extends layout

block content
    // moved from the css file so that we can compile using jade
    .intro-header(style= "background:  url(#{layout.intro.background}) no-repeat center center")
        .container
            .row
                .col-lg-12
                    .intro-message
                        img(src= layout.intro.logo)
                        if layout.message
                            h3= layout.message
                        else
                            h3= club.shortDescription
                        hr.intro-divider
                        ul.list-inline.intro-social-buttons
                            each button in layout.intro.buttons 
                                li
                                    a.btn.btn-default.btn-lg(href=button.href)
                                        i(class="fa fa-#{button.fa} fa-fw")
                                        span.network-name= button.title
    include disciplines.jade
