        script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
        script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')



  body
    //navigation
   nav.navbar.navbar-default.navbar-fixed-top.topnav(role='navigation')
              .container.topnav
                  // Brand and toggle get grouped for better mobile display
                  .navbar-header
                      button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                          span.sr-only Toggle navigation
                          span.icon-bar
                          span.icon-bar
                          span.icon-bar
                      //a.navbar-brand.topnav(href='/')= club.fullName
                      // two options for the logo in t
                      a(href="/")
                          img(src= layout.logo alt="")
                  // Collect the nav links, forms, and other content for toggling
                  #bs-example-navbar-collapse-1.collapse.navbar-collapse
                      ul.nav.navbar-nav.navbar-right
                          each item in layout.navbarRight
                              if item.dropdown
                                  li.dropdown
                                      a.dropdown-toggle(href="#", data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')= item.title
                                          span.caret
                                      ul.dropdown-menu
                                          each drop in item.dropdown
                                              li
                                                  a(href= drop.href)= drop.title
                                          // could add in some logic to have a separator here
                                              li.divider(role='separator')
                              else
                                  li
                                      a(href= item.href)= item.title
          block content

  <!-- Continuing the code after-->
  .ui.two.column.stackable.grid.masthead(style='display:none;')
      .column
      .column
        .ui.right.aligned.container
          .login-container
            button.ui.inverted.basic.button.login-button Login
    .ui.middle.aligned.center.aligned.grid.content-container
      .column
        .ui.center.aligned.container
          img(src='/images/aero_logo.png')
          h1.ui.inverted.header Mailing List
          .ui.horizontal.inverted.divider
          .ui.one.column.centered.grid
            .one.eight.wide.column.left.aligned.container
              ul.ui.big.list(style= 'color: white')
                li Get info on how to join
                li Hear more about our success
                li Learn about specific disciplines
          .ui.horizontal.divider
          .ui.padded.raised.segment
            form.ui.inverted.fluid.form.signup-form(onsubmit='return false;')
              .three.fields
                .four.wide.required.field
                  label First name
                  input(type='text', placeholder='First Name', name='first')
                .four.wide.required.field
                  label Last name
                  input(type='text', placeholder='Last Name', name='last')
                .eight.wide.required.field
                  label Email
                  input(type='email', placeholder='jdoe@uvic.ca', name='email')
              label.ui.basic.label What disciplines are you interested in?
              .seven.inline.fields
                .three.wide.field
                  .ui.checkbox
                    input.hidden(type='checkbox', tabindex='0', name='general', checked='')
                    label General Info
                .three.wide.field
                  .ui.checkbox
                    input.hidden(type='checkbox', tabindex='0', name='software')
                    label Software
                .three.wide.field
                  .ui.checkbox
                    input.hidden(type='checkbox', tabindex='0', name='electrical')
                    label Electrical
                .three.wide.field
                  .ui.checkbox
                    input.hidden(type='checkbox', tabindex='0', name='embedded')
                    label Embedded
                .three.wide.field
                  .ui.checkbox
                    input.hidden(type='checkbox', tabindex='0', name='mechanical')
                    label Mechanical
                .three.wide.field
                  .ui.checkbox
                    input.hidden(type='checkbox', tabindex='0', name='aeronautical')
                    label Aeronautical
              .ui.horizontal.divider
              .massive.ui.inverted.basic.submit.button Sign Up
              .ui.horizontal.divider
              .ui.one.column.centered.grid
                .one.four.wide.column.left.aligned.container
                  .ui.error.message
              .ui.one.column.centered.grid
                .ui.success.message
                  .header Success
                  p Thanks for signing up to learn more about UVic AERO!
    .ui.modal.login-modal
      i.close.icon
      .header
        | Login
      .content
        .description
          .ui.one.column.centered.grid
            .five.wide.column
              .ui.header Enter secret password
              form.ui.fluid.form.login-form(onsubmit='return false;')
                .one.fields
                  .required.field
                    label Password
                    input(type='password', placeholder='Enter password', name='password')
                .ui.basic.submit.button Login
                .ui.horizontal.divider
                .ui.one.column.centered.grid
                  .one.column.left.aligned.container
                    .ui.error.message
                .ui.one.column.centered.grid
                  .ui.success.message
                    .header Success
                    p Redirecting..
      .actions
        .ui.black.deny.button
          | Close
