html
  head
    title UVic AERO Mailing List
    link.ui(rel='stylesheet', type='text/css', href='http://oss.maxcdn.com/semantic-ui/2.1.3/components/reset.min.css')
    link.ui(rel='stylesheet', type='text/css', href='http://oss.maxcdn.com/semantic-ui/2.1.3/semantic.min.css')
    link.ui(rel='stylesheet', type='text/css', href='css/mailing-list.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/js/jquery-serialize-object.js')
    script(src='http://oss.maxcdn.com/semantic-ui/2.1.3/semantic.min.js')
    script(type='text/javascript', src='js/mailing-list.js')
    // Bootstrap Core JavaScript
    script(src='/js/bootstrap.min.js')
    // Bootstrap Core CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    // Custom CSS
    link(href='/css/landing-page.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    // Custom Fonts
    link(href='/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')
